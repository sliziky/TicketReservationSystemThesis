            //    await Task.Delay(1000);
            //    NavigationManager.NavigateTo("/");
            //}
            //await jsRuntime.InvokeAsync<string>("console.log", user, passwordValid);
        }
        catch (Exception)
        {
            _showLoggedIn = false;
            _showErrorMsg = true;
            StateHasChanged();
        }
    } }
