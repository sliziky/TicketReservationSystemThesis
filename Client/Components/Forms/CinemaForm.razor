@if(Model != null) {
  <EditForm Model="@Model" OnValidSubmit="OnValidSubmit" Class="login-form">
    <h3>@Title</h3>
    <DataAnnotationsValidator />
    <Validations Mode="ValidationMode.Auto" Model="@Model">
        <Validation>
            <Field>
                <FieldLabel>Title</FieldLabel>
                <TextEdit Placeholder="Cinema title..." Role="TextRole.Text" @bind-Text="@Model.Name" />
            </Field>
        </Validation>
        <Validation>
            <Field>
                <FieldLabel>City</FieldLabel>
                <TextEdit Placeholder="Cinema city..." Role="TextRole.Text" @bind-Text="@Model.City" />
            </Field>
        </Validation>

        <Validation>
            <Field>
                <FieldLabel>Price Adult ticket</FieldLabel>
                <TextEdit Placeholder="Adult" Role="TextRole.Text" @bind-Text="@Model.TicketPriceAdult" />
            </Field>
        </Validation>

        <Validation>
            <Field>
                <FieldLabel>Price Children ticket</FieldLabel>
                <TextEdit Placeholder="Children" Role="TextRole.Text" @bind-Text="@Model.TicketPriceChild" />
            </Field>
        </Validation>

        <Validation>
            <Field>
                <FieldLabel>Price Senior ticket</FieldLabel>
                <TextEdit Placeholder="Senior" Role="TextRole.Text" @bind-Text="@Model.TicketPriceSenior" />
            </Field>
        </Validation>

        <Validation>
            <Field>
                <FieldLabel>Price Student ticket</FieldLabel>
                <TextEdit Placeholder="Student" Role="TextRole.Text" @bind-Text="@Model.TicketPriceStudent" />
            </Field>
        </Validation>

        <Validation>
            <Field>
                <FieldLabel>Payment Gateway Publishable Key</FieldLabel>
                <TextEdit Placeholder="pk.." Role="TextRole.Text" @bind-Text="@Model.GatewayApiKey" />
            </Field>
        </Validation>
        <Validation>
            <Field>
                <FieldLabel>Payment Gateway Secret Key</FieldLabel>
                <TextEdit Placeholder="sk..." Role="TextRole.Text" @bind-Text="@Model.GatewayApiSecretKey" />
            </Field>
        </Validation>
        <Validation>
            <Field>
                <FieldLabel>SendGrid API Key</FieldLabel>
                <TextEdit Placeholder="SendGrid Key..." Role="TextRole.Text" @bind-Text="@Model.SendGridApiKey" />
            </Field>
        </Validation>
    </Validations>
    <Button Color="Color.Primary" Type="ButtonType.Submit" Disabled="Disabled">@ButtonText</Button>
  </EditForm>
}
@code {
    [Parameter]
    public Cinema Model { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public Func<EditContext, Task> CallBack { get; set; }

    [Parameter]
    public string ButtonText { get; set; }

    [Parameter]
    public string Title { get; set; }

    public async Task OnValidSubmit(EditContext editContext) {
        await CallBack.Invoke(editContext);
    }

}
